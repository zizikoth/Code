<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.memo.component.ui.vp2.ViewPager2Activity">
	
	<com.memo.core.widget.titleview.TitleView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:title_title_text="ViewPager2" />
	
	<com.google.android.material.tabs.TabLayout
		android:id="@+id/mTab"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp45"
		app:tabIndicatorColor="@color/black"
		app:tabIndicatorFullWidth="false"
		app:tabMode="scrollable"
		app:tabSelectedTextColor="@color/textDark"
		app:tabTextColor="@color/textNormal" />
	
	<androidx.viewpager2.widget.ViewPager2
		android:id="@+id/mVp2"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:overScrollMode="never" />

</LinearLayout>